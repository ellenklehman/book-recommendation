<% if @book.errors.any? %>
  <p> We found an error.</p>
  <ul>
    <% @book.error.full_messages.each do |message| %>
        <li> <%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @book, remote: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :genre %>
  <%= f.text_field :genre %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.hidden_field :list_id, value: @list.id %>
  <%= f.submit(class: "btn btn-primary") %>
<% end %>
